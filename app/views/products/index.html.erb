<h1 class="jumbotron">Welcome to Moe's</h1>
<div class="container">
  <h1>View Products</h1>


  <h2>Highly Reviewed Products</h2>
  <ul>
    <% @highlyReviewed.each do |most| %>
    <li><%= most.name %></li>
    <% end %>
  </ul>




  <h2>Recently Added Products</h2>
  <ul>
    <% @recentProducts.each do |recent| %>
    <li><%= recent.name %></li>
    <% end %>
  </ul>

  <hr>
  <ul>
    <% @products.each do |product| %>
    <li><%= link_to product.name, product_path(product) %></li>
    <% end %>
  </ul>

  <%= link_to "Add product", new_product_path(@product), :class => "btn btn-success" %>
</div>
